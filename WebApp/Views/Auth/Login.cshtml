@{
    ViewData["Title"] = "Login";
}

<div class="m-auto">
    <h3 class="mt-5 text-center">Авторизация</h3>
    <div class="login-warning text-danger text-center">@(ViewData["InvalidCredentials"])</div>
    <form class="d-flex flex-column w-25 m-auto mt-5" asp-controller="Auth" asp-action="Login" method="post">
        <label for="email">Email</label>
        <input name="email" type="email" required/>
        <label class="mt-2" for="password">Пароль</label>
        <input name="password" type="password" required/>
        <button class="btn-primary m-auto mt-3 w-75">Войти</button>
    </form>
</div>

